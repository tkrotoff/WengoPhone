#env = WengoGetQt4Environment()
env = WengoGetEnvironment()

libs = [
	#'qt4',
	'owcurl',
	'owthread',
]
lib_path = []
include_path = ['include']
link_flags = []
headers = [
	#'include/http/QtHttpRequest.h',
]
sources = [
	'src/HttpRequest.cpp',
	'src/NullHttpRequest.cpp',
	'src/CurlHttpRequest.cpp',
	#'src/QtHttpRequest.cpp',
]

if WengoOSWindows():
	libs += ['advapi32', 'shell32']

elif WengoOSMacOSX():
	link_flags += ['-framework CoreFoundation']

env.WengoAddLinkFlags(link_flags)
env.WengoAddIncludePath(include_path)
env.WengoUseLibraries(libs)
env.WengoAddDoxyfile()

def moc(env, headers):
	moced = []
	for header in headers:
		moced += [ env.Moc(header) ]
	return moced
#moced = moc(env, headers)

env.WengoStaticLibrary('owhttp', sources, headers)

env.SConscript('tests/SConscript')
